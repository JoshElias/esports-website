{
  "name": "spamRegex",
  "base": "xModel",
  "properties": {
    "regex": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean"
    }
  },
  "relations": {
    "spamOffences": {
      "type": "hasMany",
      "model": "spamOffence",
      "foreignKey": "spamRegexId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "DocFilter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive"
    }
  }
}
