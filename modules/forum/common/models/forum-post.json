{
  "name": "forumPost",
  "plural": "forumPosts",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "__v": {
      "type": "number"
    },
    "isActive": {
      "type": "boolean"
    },
    "content": {
      "type": "string",
      "Validate": ["spam"]
    },
    "title": {
      "type": "string",
      "Validate": ["spam"]
    },
    "viewCount": {
      "type": "number"
    },
    "voteScore": {
      "type": "number"
    },
    "votes": {
      "type": "object"
    },
    "forumThreadId": {}
  },
  "relations": {
    "forumThread": {
      "type": "belongsTo",
      "model": "forumThread",
      "foreignKey": "forumThreadId",
      "DestroyOnDelete": true
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "forumPostId",
      "DestroyOnDelete": true
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__comments"
    }
  ],
  "mixins": {
    "Validate": true,
    "DestroyOnDelete": true,
    "Scope": true,
    "Authored": true,
    "Filter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive",
      "requiredFields": ["isActive"]
    },
    "Timestamp" : true
  }
}
