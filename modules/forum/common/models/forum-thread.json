{
  "name": "forumThread",
  "plural": "forumThreads",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "__v": {
      "type": "number"
    },
    "isActive": {
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "Validate": ["spam"]
    },
    "title": {
      "type": "string",
      "Validate": ["spam"]
    },
    "forumCategoryId": {}
  },
  "relations": {
    "forumPosts": {
      "type": "hasMany",
      "model": "forumPost",
      "foreignKey": "forumThreadId",
      "DestroyOnDelete": true
    },
    "forumCategory": {
      "type": "belongsTo",
      "model": "forumCategory",
      "foreignKey": "forumCategoryId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Validate": true,
    "DestroyOnDelete": true,
    "Scope": true,
    "Authored": true,
    "Filter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive",
      "requiredFields": ["isActive"]
    },
    "TimeStamp" : {
      "createdAt" : "createdDate",
      "updatedAt" : "updatedDate",
      "required" : true
    }
  }
}
