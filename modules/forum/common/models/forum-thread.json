{
  "name": "forumThread",
  "plural": "forumThreads",
  "base": "xModel",
  "properties": {
    "__v": {
      "type": "number"
    },
    "isActive": {
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "$validate": ["spam"]
    },
    "title": {
      "type": "string",
      "Validate": ["spam"],
      "Slug": true
    },
    "forumCategoryId": {}
  },
  "relations": {
    "forumPosts": {
      "type": "hasMany",
      "model": "forumPost",
      "foreignKey": "forumThreadId",
      "$destroyOnDelete": true
    },
    "forumCategory": {
      "type": "belongsTo",
      "model": "forumCategory",
      "foreignKey": "forumCategoryId"
    },
    "slugs": {
      "type": "hasMany",
      "model": "slug",
      "foreignKey": "forumThreadId",
      "through": "sluggable"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Validate": true,
    "DocFilter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive"
    },
    "DestroyOnDelete": true,
    "Slug": true
  }
}
