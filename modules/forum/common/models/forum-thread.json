{
  "name": "forumThread",
  "plural": "forumThreads",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "$validate": true,
    "$docFilter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive"
    },
    "$destroyOnDelete": true
  },
  "properties": {
    "__v": {
      "type": "number"
    },
    "isActive": {
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "$validate": ["spam"]
    },
    "title": {
      "type": "string",
      "$validate": ["spam"]
    },
    "slug": {
        "url": {
          "type": "string",
          "$validate": ["unique"]
        },
        "linked": {
          "type": "boolean"
        }
    },
    "forumCategoryId": {}
  },
  "validations": [],
  "relations": {
    "forumPosts": {
      "type": "hasMany",
      "model": "forumPost",
      "foreignKey": "forumThreadId",
      "$destroyOnDelete": true
    },
    "forumCategory": {
      "type": "belongsTo",
      "model": "forumCategory",
      "foreignKey": "forumCategoryId"
    },
    "slug": {
      "type": "hasMany",
      "model": "slug",
      "foreignKey": "forumThreadId",
      "through": "sluggable"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
