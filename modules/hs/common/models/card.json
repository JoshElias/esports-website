{
  "name": "card",
  "plural": "cards",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "index": 1
    },
    "cost": {
      "type": "number",
      "required": true
    },
    "rarity": {
      "type": "string",
      "required": true
    },
    "race": {
      "type": "string"
    },
    "playerClass": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "string"
    },
    "flavor": {
      "type": "string"
    },
    "artist": {
      "type": "string"
    },
    "attack": {
      "type": "number"
    },
    "health": {
      "type": "number"
    },
    "durability": {
      "type": "number"
    },
    "dust": {
      "type": "number"
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "index": 1
    },
    "mechanics": {
      "type": [
        "string"
      ]
    },
    "cardType": {
      "type": "string",
      "required": true
    },
    "deckable": {
      "type": "boolean",
      "index": 1
    },
    "photoNames": {
      "type": "object",
      "required": true
    },
    "expansion": {
      "type": "string",
      "required": true
    }
  },
  "relations": {
    "decks": {
      "type": "hasMany",
      "model": "deckCard",
      "foreignKey": "cardId"
    },
    "mulligansWithCoin": {
      "type": "hasMany",
      "model": "mulligan",
      "foreignKey": "cardId",
      "through": "cardWithCoin"
    },
    "mulligansWithoutCoin": {
      "type": "hasMany",
      "model": "mulligan",
      "foreignKey": "cardId",
      "through": "cardWithoutCoin"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Scope": true,
    "Filter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive",
      "requiredFields": ["isActive"]
    },
    "Timestamp" : true
  }
}
