{
  "name": "deck",
  "plural": "decks",
  "base": "xModel",
  "properties": {
    "against": {
      "type": "object"
    },
    "allowComments": {
      "type": "boolean"
    },
    "basic": {
      "type": "boolean"
    },
    "gameModeType": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "cardQuantities": {
      "type": "object"
    },
    "contentEarly": {
      "type": "string"
    },
    "contentLate": {
      "type": "string"
    },
    "contentMid": {
      "type": "string"
    },
    "deckType": {
      "type": "string",
      "required": true
    },
    "isCommentable": {
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "Validate": ["spam"]
    },
    "isFeatured": {
      "type": "boolean"
    },
    "name": {
      "type": "string",
      "required": true,
      "Validate": ["spam"],
      "Slug": true
    },
    "heroName": {
      "type": "string"
    },
    "playerClass": {
      "type": "string",
      "required": true
    },
    "premium": {
      "type": "object"
    },
    "isPublic": {
      "type": "boolean",
      "required": true
    },
    "viewCount": {
      "type": "number"
    },
    "youtubeId": {
      "type": "string",
      "Validate": ["youtubeId"]
    },
    "isCommentable": {
      "type": "boolean",
      "default": true
    },
    "chapters": {
      "type": [
        {
          "title": {
            "type": "string",
            "Validate": ["spam"]
          },
          "orderNum": {
            "type": "number"
          },
          "content": {
            "type": "string",
            "Validate": ["spam"]
          }
        }
      ],
      "FieldFilter": {
        "acceptedRoles": ["$owner", "$admin", "$premium", "$contentProvider"],
        "predicate": "premium"
      }
    },
    "dust": {
      "type": "number"
    },
    "authorId": {}
  },
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "cards": {
      "type": "hasMany",
      "model": "deckCard",
      "foreignKey": "deckId",
      "DestroyOnDelete": true
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "deckId"
    },
    "matchups": {
      "type": "hasMany",
      "model": "deckMatchup",
      "foreignKey": "deckId",
      "$destroyOnDelete": true
    },
    "mulligans": {
      "type": "hasMany",
      "model": "mulligan",
      "foreignKey": "deckId",
      "DestroyOnDelete": true
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": "deckId"
    },
    "sluggables": {
      "type": "hasMany",
      "model": "sluggable",
      "foreignKey": "deckId"
    },
    "slugs": {
      "type": "hasMany",
      "model": "slug",
      "foreignKey": "deckId",
      "through": "sluggable"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "upsert"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "premium"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "premium"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$contentProvider",
      "permission": "ALLOW",
      "property": "premium"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__mulligans"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__cards"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__matchups"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__edit__mulligans"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__edit__cards"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__edit__matchups"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__votes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__edit__votes"
    }
  ],
  "mixins": {
    "Validate": true,
    "FieldFilter": true,
    "DocFilter": {
      "acceptedRoles": ["$owner", "$admin"],
      "predicate": "private"
    },
    "DestroyOnDelete": true,
    "Slug": true
  }
}
