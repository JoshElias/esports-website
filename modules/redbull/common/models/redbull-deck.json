{
  "name": "redbullDeck",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
       "type": "string"
    },
    "playerClass": {
      "type": "string",
      "required": true
    },
    "isOfficial": {
      "type": "boolean",
      "default": false
    },
    "redbullDraftId": {},
    "authorId": {}
  },
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "deckCards": {
      "type": "hasMany",
      "model": "tournamentDeckCard",
      "foreignKey": "redbullDeckId",
      "isChild": true
    },
    "cards": {
      "type": "hasMany",
      "model": "card",
      "foreignKey": "redbullDeckId",
      "through": "tournamentDeckCard"
    },
    "draft": {
      "type": "belongsTo",
      "model": "redbullDraft",
      "foreignKey": "redbullDraftId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "READ"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Scope": true
  }
}
