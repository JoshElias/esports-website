{
  "name": "redbullDraft",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "draftStartTime": {
      "type": "number"
    },
    "draftEndTime": {
      "type": "number"
    },
    "packOpeningStartTime": {
      "type": "number"
    },
    "packOpeningEndTime": {
      "type": "number"
    },
    "hasOpenedPacks": {
      "type": "boolean",
      "default": false
    },
    "hasStartedBuildingDeck": {
      "type": "boolean",
      "default": false
    },
    "deckBuildStartTime": {
      "type": "number"
    },
    "deckBuildStopTime": {
      "type": "number"
    },
    "hasDecksConstructed": {
      "type": "boolean",
      "default": false
    },
    "deckSubmitCurfew": {
      "type": "number"
    },
    "isOfficial": {
      "type": "boolean",
      "default": false,
      "index": 1
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "index": 1
    },
    "authorId": {
      "index": 1
    },
    "redbullDraftSettingsId": {
      "index": 1
    }
  },
  "relations": {
    "cards": {
      "type": "hasMany",
      "model": "card",
      "foreignKey": "redbullDraftId",
      "through": "redbullPackCard"
    },
    "packCards": {
      "type": "hasMany",
      "model": "redbullPackCard",
      "foreignKey": "redbullDraftId",
      "DestroyOnDelete": true
    },
    "packs": {
      "type": "hasMany",
      "model": "redbullPack",
      "foreignKey": "redbullDraftId",
      "DestroyOnDelete": true
    },
    "decks": {
      "type": "hasMany",
      "model": "redbullDeck",
      "foreignKey": "redbullDraftId",
      "DestroyOnDelete": true
    },
    "archivedCards": {
      "type": "hasMany",
      "model": "archivedDraftCard",
      "foreignKey": "redbullDraftId"
    },
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "settings": {
      "type": "belongsTo",
      "model": "redbullDraftSettings",
      "foreignKey": "redbullDraftSettingsId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },

    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW",
      "property": "find"
    },

    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "READ"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "finishedOpeningPacks"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "startDraftBuild"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "submitDecks"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW",
      "property": "addDraftPlayer"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "addDraftPlayer"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW",
      "property": "getDraftPlayers"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "getDraftPlayers"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$redbullAdmin",
      "permission": "ALLOW",
      "property": "removeDraftPlayer"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "removeDraftPlayer"
    }

  ],
  "mixins": {
    "DestroyOnDelete": true,
    "Scope": true,
    "Filter": {
      "acceptedRoles": ["$admin"],
      "predicate": "official",
      "requiredFields": ["isOfficial"]
    },
    "Timestamp" : true
  }
}
