{
  "name": "OWAbility",
  "plural": "OWAbilities",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "index": 1
    },
    "description": {
      "type": "string",
      "required": true
    },
    "className": {
      "type": "string",
      "required": true,
      "index": 1
    },
    "orderNum": {
      "type": "number",
      "required": true,
      "index": 1
    },
    "heroId": {
      "required": true,
      "index": 1
    }
  },
  "relations": {
    "hero": {
      "type": "belongsTo",
      "model": "overwatchHero",
      "foreignKey": "heroId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Scope": true,
    "Timestamp" : true
  }
}
