{
  "name": "pollItem",
  "plural": "pollItems",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "photoNames": {
      "type": "object"
    },
    "votes": {
      "type": "number"
    },
    "orderNum": {
      "type": "number"
    },
    "pollId": {}
  },
  "relations": {
    "poll": {
      "type": "belongsTo",
      "model": "poll",
      "foreignKey": "pollId"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Scope": true,
    "TimeStamp" : {
      "createdAt" : "createdDate",
      "updatedAt" : "updatedDate",
      "required" : true
    }
  }
}
