{
  "name": "article",
  "base": "xModel",
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "Slug": true
    },
    "description": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "FieldFilter": {
        "acceptedRoles": ["$owner", "$admin", "$premium", "$contentProvider"],
        "predicate": "premium"
      }
    },
    "isCommentable": {
      "type": "boolean",
      "default": true
    },
    "photoNames": {
      "type": "object"
    },
    "classTags": {
      "type": [
        "string"
      ]
    },
    "themeName": {
      "type": "string"
    },
    "viewCount": {
      "type": "number"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "premium": {
      "isPremium": {
        "type": "boolean"
      },
      "expiryDate": {
        "type": "date"
      }
    },
    "articleType": {
      "type": [
        "string"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "__v": {
      "type": "number"
    },
    "deckId": {},
    "guideId": {},
    "authorId": {}
  },
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "articleId",
      "DestroyOnDelete": true
    },
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "relatedArticles": {
      "type": "hasMany",
      "model": "article",
      "foreignKey": "parentArticleId",
      "through": "articleArticle",
      "keyThrough": "childArticleId"
    },
    "deck": {
      "type": "belongsTo",
      "model": "deck",
      "foreignKey": "deckId"
    },
    "guide": {
      "type": "belongsTo",
      "model": "guide",
      "foreignKey": "guideId"
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": "articleId"
    },
    "sluggables": {
      "type": "hasMany",
      "model": "sluggable",
      "foreignKey": "articleId"
    },
    "slugs": {
      "type": "hasMany",
      "model": "slug",
      "foreignKey": "articleId",
      "through": "sluggable"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findOne"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__votes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__edit__votes"
    }
  ],
  "mixins": {
    "Validate": true,
    "FieldFilter": true,
    "DocFilter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive"
    },
    "DestroyOnDelete": true,
    "Slug": true
  }
}
