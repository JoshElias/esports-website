{
  "name": "article",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
        "url": {
          "type": "string",
          "validators": [
            "unique"
          ]
        },
        "linked": {
          "type": "boolean"
        }
    },
    "description": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "isCommentable": {
      "type": "boolean"
    },
    "photoNames": {
      "type": "object"
    },
    "classTags": {
      "type": [
        "string"
      ]
    },
    "themeName": {
      "type": "string"
    },
    "viewCount": {
      "type": "number"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "createdDate": {
      "type": "date"
    },
    "premium": {
      "type": "object"
    },
    "articleType": {
      "type": [
        "string"
      ]
    },
    "oldRelatedArticles": {
      "type": [
        "string"
      ]
    },
    "oldComments": {
      "type": [
        "string"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "deckId": {
      "type": {}
    },
    "guideId": {
      "type": {}
    },
    "__v": {
      "type": "number"
    },
    "authorId": {
      "type": {}
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "articleId",
      "isChild": true
    },
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "relatedArticles": {
      "type": "hasMany",
      "model": "article",
      "foreignKey": "parentArticleId",
      "through": "articleArticle",
      "keyThrough": "childArticleId"
    },
    "deck": {
      "type": "belongsTo",
      "model": "deck",
      "foreignKey": "deckId"
    },
    "guide": {
      "type": "belongsTo",
      "model": "guide",
      "foreignKey": "guideId"
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": "articleId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findOne"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__votes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__edit__votes"
    }
  ],
  "methods": {}
}
