{
  "name": "game",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "__v": {
      "type": "number"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "isActive": {
      "type": "boolean"
    }
  },
  "relations": {
    "teams": {
      "type": "hasMany",
      "model": "team",
      "foreignKey": "gameId",
      "DestroyOnDelete": true
    },
    "hsClasses": {
      "type": "hasMany",
      "model": "hsClass",
      "foreignKey": "gameId",
      "DestroyOnDelete": true
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "Scope": true,
    "Filter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive",
      "requiredFields": ["isActive"]
    },
    "DestroyOnDelete": true,
    "Timestamp" : true
  }
}
