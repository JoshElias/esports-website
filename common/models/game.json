{
  "name": "game",
  "base": "xModel",
  "properties": {
    "__v": {
      "type": "number"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "isActive": {
      "type": "boolean"
    }
  },
  "relations": {
    "teams": {
      "type": "hasMany",
      "model": "team",
      "foreignKey": "gameId",
      "DestroyOnDelete": true
    },
    "hsClasses": {
      "type": "hasMany",
      "model": "hsClass",
      "foreignKey": "gameId",
      "DestroyOnDelete": true
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW"
    }
  ],
  "mixins": {
    "DocFilter": {
      "acceptedRoles": ["$admin"],
      "predicate": "inactive"
    },
    "DestroyOnDelete": true
  }
}
