{
  "name": "comment",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "text": {
      "type": "string",
      "validators": ["spam"]
    },
    "votes": [
      "object"
    ],
    "oldReplies": {},
    "createdDate": {
      "type": "date",
      "required": true
    },
    "voteScore": {
      "type": "number"
    },
    "authorId": {},
    "articleId": {},
    "guideId": {},
    "deckId": {},
    "snapshotId": {},
    "forumPostId": {},
    "parentCommentId": {},
    "redbullDeckId": {}
  },
  "validations": [],
  "relations": {
    "article": {
      "type": "belongsTo",
      "model": "article",
      "foreignKey": "articleId"
    },
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "deck": {
      "type": "belongsTo",
      "model": "deck",
      "foreignKey": "deckId"
    },
    "guide": {
      "type": "belongsTo",
      "model": "guide",
      "foreignKey": "guideId"
    },
    "snapshot": {
      "type": "belongsTo",
      "model": "snapshot",
      "foreignKey": "snapshotId"
    },
    "forumPost": {
      "type": "belongsTo",
      "model": "forumPost",
      "foreignKey": "forumPostId"
    },
    "redbullDeck": {
      "type": "belongsTo",
      "model": "redbullDeck",
      "foreignKey": "redbullDeckId"
    },
    "parentComment": {
      "type": "belongsTo",
      "model": "comment",
      "foreignKey": "parentCommentId"
    },
    "replies": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "parentCommentId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
