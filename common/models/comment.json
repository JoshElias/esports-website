{
  "name": "comment",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "text": {
      "type": "string",
      "Validate": ["spam"]
    },
    "votes": {
      "type": [
        "object"
      ]
    },
    "voteScore": {
      "type": "number"
    },
    "authorId": {},
    "articleId": {},
    "guideId": {},
    "deckId": {},
    "snapshotId": {},
    "hotsSnapshotId": {},
    "forumPostId": {},
    "parentCommentId": {},
    "redbullDeckId": {},
    "overwatchSnapshotId": {}
  },
  "relations": {
    "article": {
      "type": "belongsTo",
      "model": "article",
      "foreignKey": "articleId"
    },
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "deck": {
      "type": "belongsTo",
      "model": "deck",
      "foreignKey": "deckId"
    },
    "guide": {
      "type": "belongsTo",
      "model": "guide",
      "foreignKey": "guideId"
    },
    "snapshot": {
      "type": "belongsTo",
      "model": "snapshot",
      "foreignKey": "snapshotId"
    },
    "owSnapshot": {
      "type": "belongsTo",
      "model": "overwatchSnapshot",
      "foreignKey": "overwatchSnapshotId"
    },
    "hotsSnapshot": {
      "type": "belongsTo",
      "model": "hotsSnapshot",
      "foreignKey": "hotsSnapshotId"
    },
    "forumPost": {
      "type": "belongsTo",
      "model": "forumPost",
      "foreignKey": "forumPostId"
    },
    "redbullDeck": {
      "type": "belongsTo",
      "model": "redbullDeck",
      "foreignKey": "redbullDeckId"
    },
    "parentComment": {
      "type": "belongsTo",
      "model": "comment",
      "foreignKey": "parentCommentId"
    },
    "replies": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "parentCommentId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "mixins": {
    "Scope": true,
    "Validate": true,
    "TimeStamp" : {
      "createdAt" : "createdDate",
      "updatedAt" : "updatedDate",
      "required" : true
    }
  }
}
