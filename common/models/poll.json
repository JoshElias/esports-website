{
  "name": "poll",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "pollType": {
      "type": "string"
    },
    "voteLimit": {
      "type": "number"
    },
    "viewType": {
        "type": "string"
    },
    "createdDate": {
        "type": "date"
    },
    "oldItems": {
        "type": ["object"]
    }
  },
  "validations": [],
  "relations": {
    "items": {
      "type": "hasMany",
      "model": "pollItem",
      "foreignKey": "pollId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "READ"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "accessType": "WRITE"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "accessType": "WRITE"
    }
  ],
  "methods": {}
}
